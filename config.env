# --- capacity (per worker) ---
MAX_BROWSERS=350                # how many concurrent browser servers this worker may host
MAX_CONTEXTS_PER_BROWSER=0     # 0 = unlimited (enforced client-side); raise if you want a cap later

# --- lifecycle ---
BROWSER_TTL_MS=60000         # hard TTL per browser (30m); broker will kill after this even if active
IDLE_TIMEOUT_MS=30000          # 30s idle since last ping => kill
PING_INTERVAL_MS=20000         # client should ping every 20s

# --- security & ops ---
REQUIRE_PROXY=false             # refuse sessions without a proxy
LOG_LEVEL=info
PORT=9080                      # broker port (behind Nginx /playwright-9080)
API_KEY=tokenforthescrapingdogbrowserforautomation@123

# --- chromium flags ---
DISABLE_MEDIA=true
EXTRA_ARGS=--disable-dev-shm-usage --no-sandbox --disable-gpu --disable-blink-features=AutomationControlled
API_URL=https://browser.scrapingdog.com

BROKER_URL=wss://browser.scrapingdog.com/playwright-9080

